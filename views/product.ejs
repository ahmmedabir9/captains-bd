<% include _layouts/header %>



<div class="container c-slide">


  <!-- Breadcrumb Links -->

  <ol class="breadcrumb" style="margin: 15px;">
    <li><a href="/">Home</a></li>
    <li><a href="/products">Products</a></li>
    <li class="active"><%= p.title %></li>
  </ol>



  <div class="container row">


    <!-- Side Category Menu -->

    <div class="col-xs-12 col-md-3 sidemenu">
      <h3>Categories</h3>
      <div class="btn-group-vertical" role="group" aria-label="...">
        <a class="btn btn-info" href="/products">All Products</a>
        <% categories.forEach(function(c) { %>
        <a class="btn btn-default" href="/products/<%= c.slug %>"><%= c.title %></a>
        <% }); %>
      </div>
    </div>



    <!-- Product Details Section -->


    <div class="col-xs-12 col-md-9 p">

      <div class="col-xs-12 col-md-7">
        <div class="pimg">
          <img src="https://picsum.photos/400" alt="" class="spi">
        </div>
        <br>
      </div>

      <div class="col-xs-12 col-md-5">
        <h3 class="page-header product-header"><%= p.title %></h3>
        <p style="color: crimson; font-weight: bolder;"><%= p.category %></p>
        <p><b>Description: </b><%= p.desc %></p>
        <%  if (p.discount_price && p.discount_price != "0") { %>
        <h5>Price: <del style="color: brown;"><%= parseFloat(p.price).toFixed(2) %><b>৳</b></del>
          <%= parseFloat(p.discount_price).toFixed(2) %><b>৳</b></h5>
        <% } else { %>
        <h5>Price: <%= parseFloat(p.price).toFixed(2) %><b>৳</b></h5>
        <% } %>
        <% if(p.size[0]!=null || p.size[1]!=null || p.size[2]!=null || p.size[3]!=null || p.size[4]!=null) { %>
        <p><b>Available Sizes: </b>
          <% for(var i=0;i<5;i++) { %>
          <% if(p.size[i]!=null) { %>
          <%= p.size[i] %> |
          <% } %>
          <% } %><p class="text-muted">[Write the size on delivery note]</p>
        </p>
        <% } %>
        <p>


          <a class="btn btn-sm btn-info btn-block" href="/cart/add/<%= p.slug %>">Add to Cart</a>


        </p>
      </div>


      <div class="col-xs-12 col-md-12">


        <!-- Product Image Gallery -->

        <ul class="gallery">
          <% [100, 200, 300].forEach(function(id) { %>
          
          <li>
            <a data-fancybox="gallery" href="https://picsum.photos/id/<%= id %>/200/200">
              <img class="gimg" src="https://picsum.photos/id/<%= id %>/200/200" alt="">
            </a>
          </li>
         
          <% }); %>
        </ul>


        <!-- Related Products Section -->

        <h3 class="page-header">Related Products</h3>
        <% suggestion.forEach(function(p) { %>
        <div class="col-xs-12 col-md-4 col-sm-4 col-lg-3 p-card">
          <div class="thumbnail thumb-text">
            <div class="inner">
              <a href="/products/<%= p.category %>/<%= p.slug %>" class="pa">
                <img src="https://picsum.photos/id/130/200/200" alt="" class="card-img-top">
              </a>
            </div>
            <div class="caption">
              <h3><b><%= p.title %></b></h3>
            </div>
            <%  if (p.discount_price && p.discount_price != "0") { %>
            <h4>Price: <del style="color: brown;"><%= parseFloat(p.price).toFixed(2) %><b>৳</b></del>
              <%= parseFloat(p.discount_price).toFixed(2) %><b>৳</b></h4>
            <% } else { %>
            <h4>Price: <%= parseFloat(p.price).toFixed(2) %><b>৳</b></h4>
            <% } %>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>




<% include _layouts/footer %>