<% include _layouts/header %>


<!-- Slider -->

<div id="myCarousel" class="carousel slide c-slide" data-ride="carousel">

  <div class="carousel-inner" role="listbox">
    <div class="item active ">
      <img class="first-slide head-cover" src="/cover/cover-1.jpg" alt="First slide">
    </div>
    <div class="item">
      <img class="second-slide head-cover" src="/cover/cover-2.jpg" alt="Second slide">
    </div>
    <div class="item">
      <img class="third-slide head-cover" src="/cover/cover-3.jpg" alt="Third slide">
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- End of Slider -->





<!-- Featured Product Section -->

<div class="container">
  <div class="section-header">
    <h1>Featured Products!</h1>
  </div>
  <div class="row">
    <% products.forEach(function(p) { %>
    <% if(p.featured == 1) { %>

    <!-- Featured Product Card -->

    <div class="col-xs-12 col-md-6 col-sm-6 col-lg-4 f-card">
      <div class="f-thumb">
        <div class="inner">
          <img src="/productImages/<%= p.id %>/<%= p.image %>" alt="" class="f-image">
        </div>
        <div class="caption-overlay">
          <div class="f-text">
            <h3><b><%= p.title %></b></h3>
            <%  if (p.discount_price && p.discount_price != "0") { %>
            <h4>Price: <del style="color: brown;"><%= parseFloat(p.price).toFixed(2) %><b>৳</b></del>
              <%= parseFloat(p.discount_price).toFixed(2) %><b>৳</b></h4>
            <% } else { %>
            <h4>Price: <%= parseFloat(p.price).toFixed(2) %><b>৳</b></h4>
            <% } %>
            <a href="/products/<%= p.category %>/<%= p.slug %>" class="btn btn-info" role="button">View Details</a>
          </div>
        </div>
      </div>
    </div>



    <% } %>
    <% }); %>
  </div>
</div>




<!-- Site Ad Hero Section -->


<div class="hero"></div>





<!-- New Arrival Section -->


<div class="container">
  <div class="section-header">
    <h1>New Arrival!</h1>
  </div>
  <div class="row">
    <% latest.forEach(function(p) { %>



    <!-- Product Card -->

    <div class="col-xs-12 col-md-3 col-sm-4 col-lg-2 p-card">
      <div class="thumbnail thumb-text">
        <div class="inner">
          <a href="/products/<%= p.category %>/<%= p.slug %>" class="pa">
            <img src="/productImages/<%= p.id %>/<%= p.image %>" alt="" class="card-img-top">
          </a>
        </div>
        <div class="caption">
          <h3><b><%= p.title %></b></h3>
        </div>
        <%  if (p.discount_price && p.discount_price != "0") { %>
        <h4>Price: <del style="color: brown;"><b><%= parseFloat(p.price).toFixed(2) %></b></del>
          <%= parseFloat(p.discount_price).toFixed(2) %><b>৳</b></h4>
        <% } else { %>
        <h4>Price: <%= parseFloat(p.price).toFixed(2) %><b>৳</b></h4>
        <% } %>
        <a href="/products/<%= p.category %>/<%= p.slug %>" class="btn btn-info" role="button">View Details</a>
        <%  if (p.discount_price && p.discount_price != "0") { %>
        <div class="inside colo-1">
          <div class="icon">
            <h4> Discount </h4>
          </div>
        </div>
        <% } else if(p.featured == 1) { %>
        <div class="inside colo-2">
          <div class="icon">
            <h4> Exclussive </h4>
          </div>
        </div>
        <% } %>
      </div>
    </div>



    <% }); %>
  </div>
</div>



<!-- Index Page End -->


<% include _layouts/footer %>