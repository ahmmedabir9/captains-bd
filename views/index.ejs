<% include _layouts/header %>

<!-- Carousel
    ================================================== -->
<div id="myCarousel" class="carousel slide c-slide" data-ride="carousel">

  <div class="carousel-inner" role="listbox">
    <div class="item active ">
      <img class="first-slide head-cover" src="/images/cover-1.png" alt="First slide">
      <div class="container">
        <div class="carousel-caption">
          <h1>Example headline.</h1>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">Sign up today</a></p>
        </div>
      </div>
    </div>
    <div class="item">
      <img class="second-slide head-cover" src="/images/cover-2.png" alt="Second slide">
      <div class="container">
        <div class="carousel-caption">
          <h1>Another example headline.</h1>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a></p>
        </div>
      </div>
    </div>
    <div class="item">
      <img class="third-slide head-cover" src="/images/cover-3.png" alt="Third slide">
      <div class="container">
        <div class="carousel-caption">
          <h1>One more for good measure.</h1>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">Browse gallery</a></p>
        </div>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div><!-- /.carousel -->


<div class="container">
  <div class="section-header">
    <h1>Featured Products!</h1>
  </div>
  <div class="row">
    <% products.forEach(function(p) { %>
    <% if(p.featured == 1) { %>

    <div class="col-xs-6 col-md-2 col-sm-4 p-card">
      <div class="thumbnail thumb-text">
        <div class="inner">
          <a href="/products/<%= p.category %>/<%= p.slug %>" class="pa">
            <img src="/productImages/<%= p.id %>/<%= p.image %>" alt="" class="card-img-top">
          </a>
        </div>
        <div class="caption">
          <h3><b><%= p.title %></b></h3>
        </div>
        <h4><b>Price:</b> <%= p.price %><b>৳</b></h4>
        <a href="/products/<%= p.category %>/<%= p.slug %>" class="btn btn-info" role="button">View Details</a>
      </div>
    </div>
    <% } %>
    <% }); %>
  </div>
</div>

<div class="hero">
  <div class="hero-text">
    <h1>Welcome to Captain's Shop BD!</h1>
