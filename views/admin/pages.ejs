<%- include('../_layouts/adminheader') %>

<h1 class="page-header">Pages <a href="/admin/pages/add-page" class="btn btn-sm btn-info">Add a new Page</a>
</h1>
    <br><br>


    <table class="table table-striped sorting">

        <thead>
            <tr class="home">
                <th>Title</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% pages.forEach(function(page) { %>
            <tr id="id_<%= page._id %>" class="<%= page.slug %>">
                <td><%= page.title %></td>
                <td><a class="btn btn-xs btn-primary" href="/admin/pages/edit-page/<%= page._id %>">Edit</a></td>
                <%  if (page.slug == "home") { %>
                <td></td>
                <% } else { %>
                <td><a class="confirmDeletion btn btn-xs btn-danger" href="/admin/pages/delete-page/<%= page._id %>">Delete</a></td>
                <% } %>
            </tr>
            <% }); %>
        </tbody>

    </table>

    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    <script>
        $('tbody').sortable({

            items: "tr:not('.home')",
            placeholder: "ui-state-highlight",
            update: function () {
                var ids = $('tbody').sortable("serialize");
                var url = "/admin/pages/reorder-pages";

                $.post(url, ids);
            }
        });
    </script>


    <%- include('../_layouts/adminfooter') %>