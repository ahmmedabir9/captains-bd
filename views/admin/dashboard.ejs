<%- include('../_layouts/adminheader') %>

<h1 class="page-header">Dashboard</h1>

<div class="row placeholders">
  <div class="col-xs-12 col-sm-3 placeholder">
    <div class="color-4">
      <h1><%= total_products %></h1>
    </div>
    <h4>Total Products</h4>
  </div>
  <div class="col-xs-12 col-sm-3 placeholder">
    <div class="color-1">
      <h1><%= waiting %></h1>
    </div>
    <h4>Waiting Orders</h4>
  </div>
  <div class="col-xs-12 col-sm-3 placeholder">
    <div class="color-2">
      <h1><%= cancelled %></h1>
    </div>
    <h4>Cancelled Orders</h4>
  </div>
  <div class="col-xs-12 col-sm-3 placeholder">
    <div class="color-3">
      <h1><%= completed %></h1>
    </div>
    <h4>Completed Orders</h4>
  </div>
</div>

<div class="row">
  <h2 class="sub-header">Last Waiting Orders</h2>
  <div class="table-responsive">
    <table class="table table-striped">

      <thead>
        <tr class="home">
          <th>Order ID</th>
          <th>Customer Name</th>
          <th>View</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(function(orders) { %>
        <%  if (orders.status == "0") { %>
        <tr>
          <td><%= orders._id %></td>
          <td><%= orders.customer_name %></td>
          <td><a class="btn btn-xs btn-primary" href="/admin/orders/order-details/<%= orders._id %>">View</a>
          </td>
        </tr>
        <% } %>
        <% }); %>
      </tbody>

    </table>
  </div>
</div>
</div>


<%- include('../_layouts/adminfooter') %>